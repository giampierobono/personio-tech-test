{
  "name": "@personio/root",
  "version": "1.0.0",
  "description": "Monorepo for Tech test for Senior Frontend position",
  "keywords": [
    "reactjs",
    "redux",
    "lerna",
    "webpack"
  ],
  "homepage": "https://github.com/giampierobono/personio-tech-test#readme",
  "bugs": {
    "url": "https://github.com/giampierobono/personio-tech-test/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giampierobono/personio-tech-test.git"
  },
  "license": "MIT",
  "author": "Giampiero Bono (giampiero.bono@hotmail.it)",
  "scripts": {
    "build:api-sdk": "lerna run build --scope @personio/api-sdk",
    "build:api-sdk:prod": "cross-env ENV=production lerna run build --scope @personio/api-sdk",
    "prebuild:candiates-board:prod": "npm run build:local:deps:prod",
    "build:candiates-board:prod": "lerna run build --scope @personio/candidates-board",
    "build:data-models": "lerna run build --scope @personio/data-models",
    "build:data-models:prod": "cross-env ENV=production lerna run build --scope @personio/data-models",
    "build:data-models:watch": "lerna run build:watch --scope @personio/data-models",
    "build:local:deps": "npm run build:api-sdk && npm run build:data-models && npm run build:store && npm run build:ui-common-components",
    "build:local:deps:prod": "npm run build:api-sdk:prod && npm run build:data-models:prod && npm run build:store:prod && npm run build:ui-common-components:prod",
    "build:store": "lerna run build --scope @personio/store",
    "build:store:prod": "cross-env ENV=production lerna run build --scope @personio/store",
    "build:store:watch": "lerna run build:watch --scope @personio/store",
    "build:ui-common-components": "lerna run build --scope @personio/ui-common-components",
    "build:ui-common-components:prod": "cross-env ENV=production lerna run build --scope @personio/ui-common-components",
    "build:ui-common-components:watch": "lerna run build --scope @personio/ui-common-components",
    "clean:all": "npm run clean:dist:all && npm run clean:node_modules:all",
    "clean:dist:all": "lerna run clean:dist --parallel",
    "clean:dist:api-sdk": "lerna run clean:dist --scope @personio/api-sdk",
    "clean:dist:data-models": "lerna run clean:dist --scope @personio/data-models",
    "clean:dist:store": "lerna run clean:dist --scope @personio/store",
    "clean:node_modules:all": "lerna clean --yes && npm run clean:node_modules:root",
    "clean:node_modules:api-sdk": "lerna clean --yes --scope @personio/api-sdk",
    "clean:node_modules:data-models": "lerna clean --yes --scope @personio/data-models",
    "clean:node_modules:root": "rimraf node_modules",
    "clean:node_modules:store": "lerna clean --yes --scope @personio/store",
    "concurrently": "concurrently --kill-others-on-fail",
    "preinstall": "node scripts/check-npm.js",
    "postinstall": "lerna bootstrap --hoist && npm run build:local:deps",
    "lint:all": "lerna run lint --parallel",
    "lint:all:fix": "lerna run lint:fix --parallel",
    "lint:api-sdk": "lerna run lint @scope @personio/api-sdk",
    "lint:api-sdk:fix": "lerna run lint:fix --scope @personio/api-sdk",
    "lint:candidates-board": "lerna run lint --scope @personio/candidates-board",
    "lint:candidates-board:fix": "lerna run lint:fix --scope @personio/candidates-board",
    "lint:data-models": "lerna run lint --scope @personio/data-models",
    "lint:data-models:fix": "lerna run lint:fix --scope @personio/data-models",
    "lint:store": "lerna run lint --scope @personio/store",
    "lint:store:fix": "lerna run lint:fix --scope @personio/store",
    "lint:style:all": "lerna run lint:style --parallel",
    "lint:style:candidates-board": "lerna run lint:style --scope @personio/candidates-board",
    "lint:style:styling": "lerna run lint:style --scope @personio/styling",
    "lint:style:ui-common-components": "lerna run lint:style --scope @personio/ui-common-components",
    "sort-package-json:all": "npm run concurrently \"npm run sort-package-json:root\" \"lerna run sort-package-json --parallel\"",
    "sort-package-json:api-sdk": "lerna run sort-package-json --scope @personio/api-sdk",
    "sort-package-json:data-models": "lerna run sort-package-json --scope @personio/data-models",
    "sort-package-json:root": "sort-package-json package.json",
    "sort-package-json:store": "lerna run sort-package-json --scope @personio/store",
    "start:candidates-board": "lerna run start --scope @personio/candidates-board",
    "test:all": "lerna run test --parallel",
    "test:all:ci": "lerna run test --parallel -- -- --coverage",
    "test:all:snapshots": "lerna run test --parallel -- -- -u",
    "test:store": "lerna run test --scope @personio/store",
    "test:store:snapshots": "lerna run test --scope @personio/store -- -- -u",
    "test:ui-common-components": "lerna run test --scope @personio/ui-common-components",
    "test:ui-common-components:snapshots": "lerna run test --scope @personio/ui-common-components -- -- -u"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "lint-staged && exec < /dev/tty && git cz --hook || true",
      "pre-push": "npm run lint:all && npm run lint:style:all && npm run test:all:ci"
    }
  },
  "lint-staged": {
    "*.html": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "*.ts": [
      "eslint --fix -c .eslintrc.js --quiet",
      "prettier --write",
      "git add"
    ],
    "*.tsx": [
      "eslint --fix -c .eslintrc.js --quiet",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "commitizen": "^4.1.2",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "3.4.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "24.9.0",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.2",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "postcss-normalize": "8.0.1",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "4.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass-loader": "8.0.2",
    "sort-package-json": "^1.42.2",
    "style-loader": "0.23.1",
    "stylelint": "^13.4.0",
    "stylelint-config-recommended": "^3.0.0",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "typescript": "~3.9.2",
    "webpack": "4.42.0",
    "webpack-build-notifier": "^2.0.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": ">=13.0.0"
  }
}
